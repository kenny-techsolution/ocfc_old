//index.jade, Side Bar Menu added on 4.29.2014
#intro-pg
	position fixed
	width 100%
	top 70px
	height 100%
	background-color #3a92c8
	background radial-gradient(circle, #94d2f8, #3a92c8)
	z-index 5000

#signupSection
	.well
		form.form-horizontal fieldset
			font-family 'Freight Sans Bold', 'lucida grande', tahoma, verdana, arial, sans-serif
			legend
				font-size 40px
			p
				font-size 22px

.sub-menu
	a
		background-color #eeeeee
		padding-left 20px

	span.glyphicon
		padding-left 10px
		padding-right 10px

.sub-menu-actions
	a
		font-weight bold
		color #2fa9cf
		background-color #C9C9C9
	a.list-group-item
		border-bottom 1px solid #ddd
	a.list-group-item:last-child
		color #E9DE60
		border-left 1px solid #DFDDDD !important
	a.list-group-item:last-child:hover
		color white
		background-color #E9DE60 !important
	a:hover
		color white
		background-color #2fa9cf !important
	span.glyphicon
		padding-left 10px
		padding-right 10px

footer
	padding-left 15px
	padding-right 15px

	p
		border-top 1px solid black

.navbar-form
	.form-group
		margin-left 10px
	button
		margin-left 10px

