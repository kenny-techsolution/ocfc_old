//Sidebar added on 4.29.2014
body
	padding-top 60px
	overflow hidden

#header
	margin-bottom: 0px;
	min-width 1024px
	height 70px
	-webkit-box-shadow 0px 1px 5px 0px rgba(0, 0, 0, 0.70);
	-moz-box-shadow 0px 1px 5px 0px rgba(0, 0, 0, 0.70);
	box-shadow 0px 1px 5px 0px rgba(0, 0, 0, 0.70);
	background-image url('../images/ocfc_logo.png');
	background-repeat no-repeat
	background-color lightgray

#wrapper
	min-height 100%
	height 100%
	width 100%
	min-width 1024px
	position absolute
	top 0px
	left 0
	display inline-block

#main-wrapper
	height 100%
	overflow-y auto
	padding 70px 0 0px 200px
	width: 100%

#main
	position relative
	height 100%
	overflow-y auto
	background-color #f0f0f0
	font-size 12px
	.btn
		font-size 12px
	.form-control
		font-size 12px

.container.ng-scope
	width 530px
	margin-left 15px

#sidebar-wrapper
	#sidebar
		height 100%
		padding 70px 0 0px 0
		position fixed
		left 0px
		border-right 0px solid gra
		float left
		width 200px
		z-index 400
		-webkit-box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.70);
		-moz-box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.70);
		box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.70);
		ul.nav.list-group
			li.sub-menu.sub-menu-actions.row
				width 215px
				a.list-group-item
					border-radius 0
					font-size 12px
		.fellowship-container
			padding-left 0px
			font-size 12px
			.fellowship-sub-menu
				.menu-item a
					background-color #454147
					color #ffffff
					border-radius 0
					padding 5px 30px 5px 30px
					font-size 12px

.fellowship-sub-menu
	.list-group-item
		border none

.animate-show.ng-hide-add,
.animate-show.ng-hide-remove
	-webkit-transition 0.2s linear all
	transition 0.2s linear all

	/* remember to add this */
	display block !important
	opacity 1
	height 200px

.animate-show.ng-hide
	opacity 0
	height 0px


